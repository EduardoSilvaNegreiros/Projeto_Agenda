<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

      <%- include('includes/messages'); %>

      <div class="row">

        <div class="col-lg my-5">
          <h4>Faça seu cadastro</h4>
          <p>Se você ainda não tem conta, preencha o formulário abaixo:</p>

          <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>> <!-- Token CSRF para segurança -->
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email">
              <small class="email-error text-danger"></small> <!-- Mensagem de erro para e-mail -->
            </div>
            <div class="form-group">
              <label>Sua senha</label>
              <input type="password" class="form-control" name="password">
              <small class="password-error text-danger"></small> <!-- Mensagem de erro para senha -->
            </div>
            <button type="submit" class="btn btn-primary">Criar minha conta</button> <!-- Botão de cadastro -->
          </form>

        </div>

        <div class="col-lg my-5">
          <h4>Faça seu login</h4>
          <p>Se você já tem uma conta, faça login abaixo:</p>

          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>> <!-- Token CSRF para segurança -->
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email">
              <small class="email-error text-danger"></small> <!-- Mensagem de erro para e-mail -->
            </div>
            <div class="form-group">
              <label>Sua senha</label>
              <input type="password" class="form-control" name="password">
              <small class="password-error text-danger"></small> <!-- Mensagem de erro para senha -->
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button> <!-- Botão de login -->
          </form>

        </div>

      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
